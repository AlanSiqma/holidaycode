@model IEnumerable<MinhaPrimeiraApllicacaoWeb.Models.ProdutoModel>
<h1>Listagem dos produtos</h1>
<p>
    <a class="btn btn-primary" asp-action="Criar">Criar novo produto</a>
</p>
<table class="table table-striped table-site">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Preco</th>
            <th>EstaAtivo</th>
            <th>Editar</th>
            <th>Deletar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstaAtivo)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Deletar" asp-route-id="@item.Id">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
